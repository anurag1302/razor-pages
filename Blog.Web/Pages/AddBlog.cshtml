@page
@model Blog.Web.Pages.AddBlog
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1>Add Blog Page</h1>
    
    <form method="post">
      <div class="form-group mb-5">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" asp-for="AddModel.Title">
      </div>
      <div class="form-group mb-5">
        <label for="contents">Contents</label>
        <input type="text" class="form-control" id="contents" asp-for="AddModel.Contents">
      </div>
      <div class="form-group mb-5">
          <label for="imageUrl">Image Url</label>
          <input type="text" class="form-control" id="imageUrl" asp-for="AddModel.ImageUrl">
      </div>
      <div class="form-group mb-5">
          <label for="publishedDate">Published Date</label>
          <input type="date" class="form-control" id="publishedDate" asp-for="AddModel.PublishedDate">
      </div>
      <div class="form-group mb-5">
          <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>